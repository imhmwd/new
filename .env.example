# Trading Bot Settings
INITIAL_BALANCE_USDT=10000.0
TRADE_AMOUNT_USDT=100.0
MAX_OPEN_TRADES=5
RISK_PER_TRADE=0.02
MAX_DRAWDOWN=0.20

# Position Management
DEFAULT_STOP_LOSS_PCT=0.02
DEFAULT_TAKE_PROFIT_PCT=0.04
TRAILING_STOP_PCT=0.01

# Trading Pairs
TRADING_PAIRS=BTC/USDT,ETH/USDT,BNB/USDT,SOL/USDT,ADA/USDT

# Exchange Settings
EXCHANGE=binance
EXCHANGE_TESTNET=True

# API Keys
API_KEY=your_binance_api_key
API_SECRET=your_binance_api_secret

# Timeframes
TIMEFRAMES=1m,5m,15m,1h,4h,1d
DEFAULT_TIMEFRAME=1h

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/trading_bot.log

# Database Settings
DB_HOST=postgres
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_bot
DB_PASSWORD=trading_bot_password

# PostgreSQL Environment Variables (for docker-compose)
POSTGRES_USER=trading_bot
POSTGRES_PASSWORD=trading_bot_password
POSTGRES_DB=trading_bot

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379

# Sentiment Feed Settings
NEWS_API_KEY=
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
SENTIMENT_UPDATE_INTERVAL=300

# Data Retention Settings
DATA_RETENTION_DAYS=90
CLEANUP_BATCH_SIZE=1000

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true

# Scalping-specific Settings
MIN_VOLUME_USDT=100000
MIN_SPREAD_PCT=0.001
MAX_SLIPPAGE_PCT=0.002
MIN_PROFIT_PCT=0.003
MAX_TRADE_DURATION=300
